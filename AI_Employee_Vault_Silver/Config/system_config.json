  },
  "mcp_servers": {
    "email_mcp": {
      "enabled": true,
      "type": "gmail_api",
      "endpoint": "https://gmail.googleapis.com/"
    },
    "linkedin_mcp": {
      "enabled": true,
      "type": "linkedin_api",
